<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="10dp" >

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:background="@drawable/image_bg"
        android:layout_marginRight="10dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/list_image"
            android:layout_width="100dp"
            android:scaleType="fitXY"
            android:layout_height="100dp"/>

    </LinearLayout>

    <!-- Title Of Song-->
    <TextView
        android:id="@+id/nama_bencana"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Nama Bencana"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Artist Name -->

    <!-- Rightend Duration -->

    <!-- Rightend Arrow -->

    <TextView
        android:id="@+id/status_distribusi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_nama_relawan"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/txt_nama_relawan"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Status"
        android:textColor="#343434"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/txt_nama_relawan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_bencana"
        android:layout_alignStart="@+id/nama_bencana"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Status :"
        android:textColor="#343434"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/total_donasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_totaldonasi"
        android:layout_alignStart="@+id/txt_totaldonasi"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Total Donasi"
        android:textColor="#343434"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/txt_totaldonasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nama_relawan"
        android:layout_alignStart="@+id/txt_nama_relawan"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Total Donasi"
        android:textColor="#343434"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/jumlah_donatur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/total_donasi"
        android:layout_marginLeft="90dp"
        android:layout_toEndOf="@+id/total_donasi"
        android:gravity="right"
        android:text="Jumlah Donatur"
        android:textColor="#343434"
        android:textSize="10dip"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/jumlah_donatur"
        android:layout_toEndOf="@+id/jumlah_donatur"
        android:gravity="right"
        android:text="Donasi"
        android:layout_marginLeft="5dp"
        android:textColor="#343434"
        android:textSize="10dip"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>