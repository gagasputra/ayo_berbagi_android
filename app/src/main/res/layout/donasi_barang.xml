                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Buah"
                            android:textAlignment="center" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
